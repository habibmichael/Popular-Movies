<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gird_layout"
    tools:context="com.l2l.androided.mh122354.popularmovies.fragments.MovieGridFragment"
    android:columnCount="3"
    android:rowCount="3">


    <ImageView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_1"/>

    <ImageView
        android:layout_column="1"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_2"/>

    <ImageView
        android:layout_column="2"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/test_view_3"/>


    <ImageView
        android:layout_column="0"
        android:layout_row="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_4"/>

    <ImageView
        android:layout_column="1"
        android:layout_row="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_5"/>

    <ImageView
        android:layout_column="2"
        android:layout_row="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_6"/>

    <ImageView
        android:layout_column="0"
        android:layout_row="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_7"/>

    <ImageView
        android:layout_column="1"
        android:layout_row="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_8"/>


    <ImageView
        android:layout_column="2"
        android:layout_row="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/movie_view_9"/>


</GridLayout>
